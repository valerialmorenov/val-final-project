{% extends '_templates/base.njk' %}

{% block page_title %}Visit Austin{% endblock %}

{% block page_description %}The index search description for this page goes here.{% endblock %}

{% block content %}
<div class="container">
  <h1>Main headline here</h1>
  <p>Intro text here.</p>
  <h2>Landmarks loop</h2>
  <p>This loops through data that came from a Google Sheets example.</p>
  <div class="row">
    {% for landmark in austin.landmarks %}
      <div class="col">
        <img src="img/img-austin/landmarks/{{ landmark.image }}" alt="" class="img-fluid">
        <h3><a href="landmarks/{{ landmark.slug }}.html">{{ landmark.name }}</a></h3>
      </div>
    {% endfor %}
  </div>
</div>
<div class="container">
  <div class="row row-cols-1 row-cols-md-2 g-4">
  {% for landmark in austin.landmarks %}
  <div class="col">
    <div class="card">
      <img src="img/img-austin/landmarks/{{ landmark.image }}" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{ landmark.name }}</h5>
        <p class="card-text">{{ landmark.description }}</p>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}